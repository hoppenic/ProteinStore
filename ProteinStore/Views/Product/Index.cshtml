@model IEnumerable<Product>


@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-sm-12 col-md-4">
                <h3>@product.Name</h3>
                <h4>@product.Description</h4>
                <h4>@(product.Price.HasValue ? product.Price.Value.ToString("C"): "No Price")</h4>

            </div>
        }


        
    </div>

</div>